<div class="container-fluid col-md-6">
  <center>
    <h3 style="color:red">Filter Room</h3>
  </center>
 <br/>

  <div align'center'>
    <%= form_tag find_by_filter_rooms_path, :method => :get, target: "_blank", :onsubmit=>"return validate_room()", :class => "form-horizontal two-column nomargin", id: "allot_room"  do %>

    <table>
      <tr>
        <td align="left">
          <div class="dropdown">
            <div class="form-row">
              <div class="form-group col-md-12">
                <font color="red">*</font> <span>Floors</span>
                <%= select_tag "floors", options_for_select(@floors),:prompt => "Select floors"%>
              </div>
            </div>
          </div>
        </td>

        <td align='center'>
          <div class='dropdown'>
            <div class="form-row">
              <div class="form-group col-md-12">
                <font color="red">*</font> <span>Bathroom</span>
                  <%= select_tag "rooms", options_for_select(@attached_bathroom),:prompt => "Select bathroom"%>
              </div>
            </div>
          </div>
        </td>

        <td align="right">
          <div class ='dropdown'>
            <div class="form-row">
              <div class="form-group col-md-12">
                  <font color="red">*</font> <span>Sharing Type</span>
                  <%= select_tag "type_of_sharing", options_for_select(@type_of_sharing),:prompt => "Select sharing"%>
              </div>
            </div>
          </div>
        </td>
      </tr>
    </table>

    <br/>

      <center>
        <div class="form-group">
          <%= submit_tag "Filter Room", id: "Filer_rooms_by_floor", class:"btn btn-success"%>
        </div>
      </center>

    <% end %>
  </div>
</div>

<div id= 'room_by_floor'>
  <%= render 'room_details' %>
</div>