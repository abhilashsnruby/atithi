<div class="container-fluid col-md-6">
  <center>
    <h3 style="color:red">Filter Room</h3>
  </center>
 <br/>

  <div align'center'>
    <%= form_tag find_by_filter_rooms_path, :method => :get, target: "_blank", :onsubmit=>"return validate_room()", :class => "form-horizontal two-column nomargin", id: "allot_room"  do %>

      <div class="form-row">
        <div class="form-group col-md-12">
          <div class = "emp_rate-col">
            <font color="red">*</font> <span>Floors</span>
            <%= select_tag "customers", options_for_select(@floors),:prompt => "Select floors"%>
          </div>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-12">
          <div class ="emp_rate-col2">
            <font color="red">*</font> <span>Attached bathroom</span>
            <%= select_tag "rooms", options_for_select(@rooms),:prompt => "Select bathroom"%>
          </div>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-12">
          <div class ="emp_rate-col2">
            <font color="red">*</font> <span>Type of Sharing</span>
            <%= select_tag "rooms", options_for_select(@type_of_sharing),:prompt => "Select type of sharing"%>
          </div>
        </div>
      </div>

      <center>
        <div class="form-group">
          <%= submit_tag "Filter Room", id: "Filer_rooms_by_floor", class:"btn btn-success"%>
        </div>
      </center>

    <% end %>
  </div>
</div>